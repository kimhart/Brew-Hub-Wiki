<% if @user %>
<div id="category_list">
<h1>Browse categories:</h1>
  <div id="columns">
  <% @categories.each do |category| %>
    <div class="category_and_image">
    <h2><a href="/categories/<%= category.id %>"><%= category.name %></a></h2>
    <img class="category_img" src="<%= category.img_url %>" alt="<%= category.name %>"> 
  </div>
  <% end %>
  </div>
<% else %>
<div id="please-login-or-signup">
  <h3 class="please-login-or-signup">
   <a href="/login">Please <br><u>login or signup</u><br>to continue.</a>
  </h3>
</div>
<% end %>
</div>
