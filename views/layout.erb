<!DOCTYPE html>
<html>
<head>
  <title>BrewHub Wiki</title>
  <link rel="Stylesheet" href="/css/style.css">
  <link href='https://fonts.googleapis.com/css?family=Playfair+Display:400,700,400italic,700italic,900,900italic' rel='stylesheet' type='text/css'>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="/js/main.js"></script>
</head>
<body>
  <header>
  <% if @user %>
  <form action="/sessions" method="POST">
      <input type="hidden" name="_method" value="delete">
      <button class="logout_btn">Not <%= @user.first_name%>? Log Out</button>
      </form>
    <h1><a href="/">BrewHub</a></h1>
    <ul class="nav">
      <li><a href="/">Home</a></li>
      <li><a href="/articles">Articles</a></li>
      <li><a href="/categories">Categories</a></li>
      <li><a href="/articles/new">New Article</a></li>
    </ul>
    <% else %>
    <h1><a href="/">BrewHub</a></h1>
    <ul class="nav">
      <li><a href="/">Home</a></li>
      <li><a href="/articles">Articles</a></li>
      <li><a href="/categories">Categories</a></li>
      <li><a href="/articles/new">New Article</a></li>
    </ul>
    <% end %>
  </header>
<div class="main-page">
  <%= yield %>
</div>
</body>
</html>